
<h1>Listing Articles</h1>
<%= link_to 'Add new Author', new_author_path %>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Name</th>
    <th>Homepage</th>
    <th></th>
  </tr>
 
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.first_name %></td>
      <td><%= author.last_name %></td>
      <td><%= author.name() %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to 'Destroy', author_path(author), method: :delete,
              data: { confirm: 'Are you sure you want to destroy ' + author.name + '?' } %></td>
    </tr>
  <% end %>
</table>